<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_sea"
    android:padding="16dp"
    tools:context=".TestActivity">

    <!-- Top bar: Timer + (προαιρετικό) μικρό status -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/CardTop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:gravity="center_vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/TvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏱ 00:00"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/TvStep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ερώτηση"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:alpha="0.8"
                tools:ignore="HardcodedText"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Κύρια κάρτα: ερώτηση + εικόνα + επιλογές (scroll αν χρειαστεί) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/CardContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/CardTop"
        app:layout_constraintBottom_toTopOf="@id/BtNext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/TvQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Ερώτηση εδώ..."
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    tools:ignore="HardcodedText" />

                <!-- Επιλογές: κρατάμε τα ίδια IDs, απλά τις κάνουμε MaterialButtons -->
                <ImageView
                    android:id="@+id/IvQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginBottom="14dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/avatars" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/BtChoice1"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:minHeight="52dp"
                    android:text="Επιλογή 1"
                    android:textColor="@color/text_primary"
                    app:backgroundTint="@color/choice_bg"
                    app:cornerRadius="16dp"
                    app:rippleColor="@color/purple_pressed"
                    app:strokeColor="@color/purple_outline"
                    app:strokeWidth="1.5dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/BtChoice2"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:minHeight="52dp"
                    android:text="Επιλογή 2"
                    android:textColor="@color/text_primary"
                    app:backgroundTint="@color/choice_bg"
                    app:cornerRadius="16dp"
                    app:rippleColor="@color/purple_pressed"
                    app:strokeColor="@color/purple_outline"
                    app:strokeWidth="1.5dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/BtChoice3"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:minHeight="52dp"
                    android:text="Επιλογή 3"
                    android:textColor="@color/text_primary"
                    app:backgroundTint="@color/choice_bg"
                    app:cornerRadius="16dp"
                    app:rippleColor="@color/purple_pressed"
                    app:strokeColor="@color/purple_outline"
                    app:strokeWidth="1.5dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/BtChoice4"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:minHeight="52dp"
                    android:text="Επιλογή 4"
                    android:textColor="@color/text_primary"
                    app:backgroundTint="@color/choice_bg"
                    app:cornerRadius="16dp"
                    app:rippleColor="@color/purple_pressed"
                    app:strokeColor="@color/purple_outline"
                    app:strokeWidth="1.5dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/BtChoice5"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:minHeight="52dp"
                    android:text="Επιλογή 5"
                    android:textColor="@color/text_primary"
                    app:backgroundTint="@color/choice_bg"
                    app:cornerRadius="16dp"
                    app:rippleColor="@color/purple_pressed"
                    app:strokeColor="@color/purple_outline"
                    app:strokeWidth="1.5dp" />

            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

    <!-- Next: fixed bottom, full width -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/BtNext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="54dp"
        android:text="ΕΠΟΜΕΝΟ"
        app:cornerRadius="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>
