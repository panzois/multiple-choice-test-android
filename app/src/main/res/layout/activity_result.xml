<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/teal_200"
    tools:context=".ResultActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/CardResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#6200EE"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnShowHistory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <TextView
            android:id="@+id/TvScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:lineSpacingExtra="10dp"
            android:gravity="center"
            tools:ignore="HardcodedText" />
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btnShowHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ΔΕΙΤΕ ΤΟ ΙΣΤΟΡΙΚΟ"
        android:layout_marginTop="24dp"
        android:minHeight="52dp"
        app:layout_constraintTop_toBottomOf="@id/CardResult"
        app:layout_constraintBottom_toTopOf="@+id/BtRestart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/BtRestart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="52dp"
        android:layout_marginTop="12dp"
        android:text="ΤΕΛΟΣ"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btnShowHistory"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

